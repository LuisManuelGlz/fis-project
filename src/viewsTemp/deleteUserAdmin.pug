extends layout

block append config
  - page_title = 'Eliminar'

block append head
  link(rel='stylesheet', href='/stylesheets/style2.css')

block append wrapper
  script(src='/javascripts/addBlur.js')
  link(rel='stylesheet', href='/stylesheets/transitionRain.css')

block nav
  .nav__main
    a(class="logoName" href='/menuAdmin')= title

block content
  .form__main
    - form_title = 'Eliminar usuario'
    .form__wrapper
      form.form-data-insert(action="/menuAdmin/deleteUserAdmin" method="post")
        h2= form_title
        input(type="text", class="email" name="email" placeholder="Correo")
        br
        input(type="submit" class="confirm" value="Eliminar")

